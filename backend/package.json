{
  "name": "backend",
  "version": "0.0.7",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "bash build.sh",
    "build:npm": "npx prisma generate && npx nest build",
    "build:tsc": "npx prisma generate && npx tsc -p tsconfig.build.json",
    "start": "nest start",
    "prestart:dev": "npx prisma generate",
    "start:dev": "cross-env PORT=4000 nest start --watch",
    "start:prod": "node scripts/start-prod.js",
    "start:force-build": "npm run build && npm run start:prod",
    "postinstall": "npx prisma generate && npm run build:tsc",
    "seed": "npx ts-node prisma/seed.ts",
    "rebuild": "npx ts-node scripts/smart-rebuild.ts",
    "rebuild:dev": "npx ts-node scripts/smart-rebuild.ts -r \"開發環境重建\"",
    "rebuild:protect": "npx ts-node scripts/smart-rebuild.ts -p -r \"保護性重建\"",
    "restore": "npx ts-node scripts/restore-backup.ts",
    "backup:list": "npx ts-node scripts/restore-backup.ts --list",
    "business-data": "node scripts/run-business-data.js",
    "business-data:small": "node scripts/run-business-data.js --contacts=20 --appointments=15 --orders=10",
    "business-data:large": "node scripts/run-business-data.js --contacts=100 --appointments=80 --orders=60"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "10.4.20",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "10.4.20",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.20",
    "@prisma/client": "6.16.2",
    "@types/luxon": "^3.7.1",
    "axios": "^1.7.2",
    "bcrypt": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "dotenv": "^16.4.5",
    "luxon": "^3.7.2",
    "multer": "1.4.5-lts.1",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "prisma": "6.16.2",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "zod": "4.1.9"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "5.0.2",
    "@types/express": "4.17.21",
    "@types/jest": "^30.0.0",
    "@types/multer": "1.4.7",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "^6.0.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
